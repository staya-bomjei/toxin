extends ../../page-layouts/ui-kit-base/ui-kit-base

include ../../components/header/header
include ../../components/footer/footer

append variables
  -
    const title = 'Headers & Footers';
    const description = 'Headers & Footers, здесь отображены футеры и хедеры используемые в Toxin.';
    const keywords = 'Toxin, Headers & Footers, UI-Kit, header, footer';
    const {
      header,
      footer
    } = htmlWebpackPlugin.options.getData();

block main
  .headers-and-footers
    +header(header.notLoggedIn)
    +header(header.loggedIn)
    +footer(footer.default)
    .headers-and-footers__center-wrapper
      +footer(footer.mobile)
