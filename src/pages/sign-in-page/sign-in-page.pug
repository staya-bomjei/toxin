extends ../../page-layouts/page-base/page-base

include ../../components/header/header
include ../../components/footer/footer
include ../../components/sign-in/sign-in
include ../../components/backgrounds/backgrounds

append variables
  -
    const title = 'Sign In Page';
    const description = 'Отель Toxin, здесь вы можете подобрать себе номер в отеле по вкусу!';
    const keywords = 'Toxin, Main, войти, sign in';
    const { header, footer, form, backgrounds } = htmlWebpackPlugin.options.getData();

    // получение ссылок на изображения в собранном проекте
    backgrounds.images.forEach((image) => image.path = require(`./img/${image.path}`))

append header
  +header(header)

append main
  .sign-in-page
    +backgrounds(backgrounds)
    .sign-in-page__content
      .sign-in-page__form
        +sign-in(form)


append footer
  +footer(footer)
