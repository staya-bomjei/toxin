extends ../../page-layouts/page-base/page-base

include ../../components/header/header
include ../../components/footer/footer
include ../../components/sign-up/sign-up

append variables
  -
    const title = 'Registration Page';
    const description = 'Отель Toxin, здесь вы можете подобрать себе номер в отеле по вкусу!';
    const keywords = 'Toxin, Main, sign up, зарегестрироваться';
    const { header, footer, form } = htmlWebpackPlugin.options.getData();

append header
  +header(header)

append main
  .registration
    .registration__content
      .registration__form
        +sign-up(form)


append footer
  +footer(footer)
