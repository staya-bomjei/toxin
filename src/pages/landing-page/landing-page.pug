extends ../../page-layouts/page-base/page-base

include ../../components/header/header
include ../../components/footer/footer
include ../../components/backgrounds/backgrounds
include ../../components/find-number/find-number

append variables
  -
    const title = 'Landing page';
    const description = 'Отель Toxin, здесь вы можете подобрать себе номер в отеле по вкусу!';
    const keywords = 'Toxin, Main, главная страница, подобрать номер, отель, снять жильё';
    const { header, footer, form, backgrounds } = htmlWebpackPlugin.options.getData();

    // получение ссылок на изображения в собранном проекте
    backgrounds.images.forEach((image) => image.path = require(`./img/${image.path}`))

append header
  +header(header)

append main
  .landing-page
    +backgrounds(backgrounds)
    .landing-page__content
      .landing-page__find-number
        +find-number(form)
      .landing-page__spacing
      .landing-page__label
        | Лучшие номера для вашей работы,
        br
        | отдыха и просто вдохновения


append footer
  +footer(footer)
