mixin pagination(options = {})
  -
    const {
      initState = 1,
      itemsCounter = 180,
      itemsPerPage = 12,
      postfix = ''
    } = options;

  .pagination.js-pagination(
    data-init-state = initState
    data-items-counter = itemsCounter
    data-items-per-page = itemsPerPage
    data-postfix = postfix
  )
    .pagination__buttons
      .pagination__prev.js-pagination__prev arrow_back
      - for (let i = 0; i < 7; i++)
        .pagination__number.js-pagination__number
      .pagination__next.js-pagination__next arrow_forward

    .pagination__text.js-pagination__text
