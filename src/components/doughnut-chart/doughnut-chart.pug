//-
  options.items - массив объектов
  options.items[0].text - текст
  options.items[0].counter - количество
  options.items[0].color - строка цвета или объект градиента
  options.items[0].color.direction - направление градиента
  options.items[0].color.stops - массив стопов градиента
  options.items[0].color.stops[0].percent - процент стопа градиента
  options.items[0].color.stops[0].color - строка цвета стопа градиента
mixin doughnut-chart(options = {})
  -
    const { items } = options;
    const total = items.reduce((sum, item) => sum + item.counter, 0);
    const labels = items.map((item) => item.text);

  .doughnut-chart.js-doughnut-chart(data-items = items)
    .doughnut-chart__chart-wrapper
      canvas.doughnut-chart__chart.js-doughnut-chart__chart
      .doughnut-chart__total
        .doughnut-chart__counter= total
        .doughnut-chart__votes голосов
    ul.doughnut-chart__legend
      each label in labels
        li.doughnut-chart__label= label
          .doughnut-chart__dot.js-doughnut-chart__dot
