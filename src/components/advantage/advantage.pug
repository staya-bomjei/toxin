//- options:
//-   icon - название иконки из material icons
//-   size - размер иконки (допустимые значения: 18, 24, 36, 48)
//-   title - заголовок преимущества
//-   description - описание преимущества
mixin advantage(options)
  if !options
    - options = {};
  -
    const { icon, size, title, description } = options;
    const iconClasses = ['advantage__icon', 'material-icons', `md-${size}`];
  
  .advantage
    .advantage__content
      div(class = iconClasses)= icon
      .advantage__text-box
        .advantage__title= title
        .advantage__description= description
    hr.advantage__underline
