include ../text/text

//-
  options.isChecked - если true, то чекбокс будет в состоянии checked
  options.text - текст метки
  options.richTitle - если указан, то добавляется заголовок richTitle
mixin checkbox(options = {})
  -
    const {
      isChecked = false,
      text = '',
      richTitle,
    } = options;

    const classes = [];
    if (richTitle) classes.push('checkbox_variant_rich');

  .checkbox(class = classes)
    label.checkbox__label
      input.checkbox__input(type = 'checkbox' checked = isChecked)
      span.checkbox__mark
      if richTitle
        span.checkbox__rich-container
          span.checkbox__title= richTitle
          span.checkbox__text
            +text({ text })
      else
        span.checkbox__text
          +text({ text })
