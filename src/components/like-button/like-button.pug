//-
  options.mix - класс, который будет добавлен к компоненту
  options.isChecked - если true, то кнопка будет в состоянии checked, т.е. лайк уже поставлен
  options.counter - количество лайков, с учётом поставленного, если isChecked true
mixin like-button(options)
  if !options
    - options = {};
  -
    const { mix, isChecked = false, counter = 0 } = options;
    const icon = (isChecked) ? 'favorite' : 'favorite_border';
    const classes = [];

    if (mix) {
      classes.push(mix);
    }
    if (isChecked) {
      classes.push('like-button_liked');
    }

  .like-button.js-like-button(class = classes)
    .like-button__icon.js-like-button__icon= icon
    .like-button__counter.js-like-button__counter= counter
